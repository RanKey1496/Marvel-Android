<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/image_not_available" />

            <TextView
                android:id="@+id/txtDetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgDetail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Id" />

            <TextView
                android:id="@+id/txtDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDetailId"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Name" />

            <TextView
                android:id="@+id/txtDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDetailName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Description" />

            <TextView
                android:id="@+id/txtDetailURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDetailDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="www.url.com" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>